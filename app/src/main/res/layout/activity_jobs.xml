<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".p4_jobs.JobActivity">

    <Button
        android:id="@+id/jobs_button_create_lazy_job"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create a Lazy Job" />

    <Button
        android:id="@+id/jobs_button_start_lazy_job"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start the Lazy Job" />


    <View
        android:layout_width="wrap_content"
        android:layout_height="40dp" />

    <Button
        android:id="@+id/jobs_button_launch_no_coop_cancel_job"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Launch Job (No Coop Cancel)" />

    <Button
        android:id="@+id/jobs_button_launch_job_with_is_active"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Launch Job(isActive)" />

    <Button
        android:id="@+id/jobs_button_launch_job_with_delay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Launch Job(with delay)" />

    <Button
        android:id="@+id/jobs_button_cancel_job"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel Job" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="40dp" />

    <EditText
        android:id="@+id/jobs_edittext_timeout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Num of iterations"
        android:text="200" />

    <Button
        android:id="@+id/jobs_button_timeout_job"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Launch Job with 5000ms Timeout" />


</LinearLayout>