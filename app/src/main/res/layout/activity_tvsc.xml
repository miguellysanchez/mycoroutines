<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/tvsc_edittext_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Thread/Coroutine Count"
        />
    <Button
        android:id="@+id/tvsc_button_spawn_threads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Spawn N threads"/>
    <Button
        android:id="@+id/tvsc_button_spawn_coroutines"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Spawn N Coroutines"/>

</LinearLayout>