<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sample.mycoroutines">

    <application
        android:name=".MyCoroutinesApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".p1_intro.ThreadVsCoroutineActivity"
            android:label="Threads vs. Coroutines" />
        <activity android:name=".p1_intro.AsyncCompareActivity"
            android:label="Async Operations Comparison"/>

        <activity
            android:name=".p3_builders.CoroutineBuildersActivity"
            android:label="Coroutine Builders" />
        <activity
            android:name=".SandboxActivity"
            android:label="Sandbox Test" />
        <activity android:name=".p4_jobs_and_cancellation.CancelCoroutineActivity" />
        <activity android:name=".p2_suspend.SuspendFunctionsActivity" />
    </application>

</manifest>